{
  "name": "@beapi/be-a11y",
  "version": "2.0.0-beta.5",
  "type": "module",
  "description": "Collection of usefull accessible components",
  "repository": {
    "type": "git",
    "url": "https://github.com/BeAPI/be-a11y"
  },
  "author": "Be API",
  "license": "MIT",
  "private": false,
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "main": "./dist/be-a11y.js",
  "module": "./dist/be-a11y.js",
  "types": "./dist/types/be-a11y.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/be-a11y.d.ts",
      "import": "./dist/be-a11y.js",
      "require": "./dist/be-a11y.js"
    }
  },
  "sideEffects": false,
  "keywords": [
    "accessible",
    "a11Y",
    "accessibility",
    "w3c",
    "components",
    "modal",
    "tab",
    "accordion",
    "es6"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.build.json",
    "build:types": "tsc -p tsconfig.build.json",
    "preview": "vite preview",
    "test": "playwright test",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "body-scroll-lock": "4.0.0-beta.0",
    "oneloop.js": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@playwright/test": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@wordpress/stylelint-config": "^23.11.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.3",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "rollup-plugin-license": "^3.5.3",
    "stylelint": "^16.15.0",
    "stylelint-config-recess-order": "^6.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup"
      ]
    }
  },
  "volta": {
    "node": "22.13.1"
  }
}
